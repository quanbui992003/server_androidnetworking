<div class="container">
  <h2 style="text-align: center;margin-top: 20px;font-size: 50px;">Add Prodcut</h2>
  <form method="POST" action="/product/addProduct" autocomplete="off" enctype="multipart/form-data">
    <div class="form-group">
      <label style="width: 200px;" class="text-center">
        <input type="text" class="form-control" name="image" required placeholder="Enter image Book :">
      </label>
    </div>
    <div class="form-group">
      <label for="username">Name Book: </label>
      <input type="text" class="form-control" name="name" required placeholder="Enter Name Book :">
    </div>
    {{!-- <div class="form-group">
      <label for="date">Publication Date: </label>
      <input type="date" class="form-control" name="date" required placeholder="Enter Password :">
    </div> --}}
    <div class="form-group">
      <label for="author">price: </label>
      <input type="text" class="form-control" name="price" required placeholder="Enter the price :">
    </div>
    <div class="form-group">
      <label for="content">description: </label>
      <input type="text" class="form-control" name="description" required placeholder="Enter the description :">
    </div>
    <div class="mb-6">
      <button type="submit" class="btn btn-block text-uppercase btn-primary" style="margin-top: 5px;">
        SUBMIT
      </button>
    </div>
  </form>
</div>
<script>
  const imgInput = document.getElementById('image');
  const imgPreview = document.getElementById('img-preview');

  imgInput.addEventListener('change', () => {
    const file = imgInput.files[0];
    const reader = new FileReader();
    console.log(imgInput,imgPreview)

    reader.addEventListener("load", function () {
      imgPreview.src = reader.result;
    }, false);

    if (file) {
      reader.readAsDataURL(file);
    }
  });
</script>